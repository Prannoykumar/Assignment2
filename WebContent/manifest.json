{
  "name": "Find and heighlight",
  "version": "1.0",
  "description": "Find and heighlight",
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["popup.js"]
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },


  "browser_action": {
    "default_title": "Find and heighlight",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "manifest_version": 2
}